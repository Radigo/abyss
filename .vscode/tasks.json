{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Win build",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-W",
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/abyss.exe",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/engine/*.cpp",
                "-lSDL2",
                "-lSDL2main",
                "-mwindows"// Remove to allow console debug outside VScode
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Build main into abyss.exe"
        }
    ],
    "version": "2.0.0"
}